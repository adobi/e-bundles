<script type="text/javascript" src="<?= BASE_URL ?>js/jquery.cycle.all.latest.js"></script> 

<script type="text/javascript">
    $(function() {
        var delays = [5000, 8000, 11000, 14000, 17000, 20000].sort(function() { return (Math.round(Math.random())-0.5);});
        $.each($('.game-category-on-mainpage'), function(i, v) {
            
           $(this).cycle({
        		fx: 'fade',
        		//delay: Math.floor(Math.random()*8000),
        		delay: -delays[i],
        		speed: 3000,
        		//random: true,
        		timeout: 25000
        	}); 
        });    
    });
</script>


      
  