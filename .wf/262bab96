        <script>
        
function createUnity()
{
    if (typeof unityObject != "undefined") {
        var params = {
            backgroundcolor: "FFFFFF",
            bordercolor: "FFFFFF",
            textcolor: "FFFFFF",
            logoimage: "pics/LoadingLogo.png",
            progressbarimage: "pics/LoadingProgressBar.png",
            progressframeimage: "pics/LoadingProgressFrame.png",
            disableContextMenu: true
        };
    
        var unityUrl = "../../Clients/Client_" + clientVersion + ".unity3d";
        
        unityObject.embedUnity("unityPlayer", unityUrl, Math.max(760, window.innerWidth), 620, params, null, unityLoaded);
    }
}

function unityLoaded(result) {
    if (result.success) {
        //alert("Unity loaded!");
    }
    else {
        alert("Please install Unity Web Player!");
    }
}

        </script>
        
