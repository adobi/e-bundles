<script type="text/javascript">

    $(function() {
        $('body').delegate('#pagination-link', 'click', function() {
            var self = $(this), url = self.attr('href'), page = self.attr('data-page');
            $.get(url+ (parseInt(page, 10) + 1) + '/ajax', function(response) {
                //console.log(response);
                //console.log($('#items-list'));
                $('#items-list').append(response);
                
                self.attr('data-page', parseInt(page, 10) + 1); 
            });
            
            return false;
        });
    })

</script>

</body>
